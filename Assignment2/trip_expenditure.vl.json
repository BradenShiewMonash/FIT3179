{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Total Trip Expenditure of Visitors (2010-2024)",
    "subtitle": "Financial Year"
  },
  "data": {
    "url": "https://raw.githubusercontent.com/BradenShiewMonash/FIT3179/refs/heads/main/Assignment2/trip_expenditure.csv"
  },
  "mark": {"type": "line", "point": true},
  "encoding": {
    "x": {"field": "year", "type": "ordinal", "axis": {"title": "Year"}},
    "y": {
      "field": "A$ (b)",
      "type": "quantitative",
      "axis": {"title": "Expenditure (A$ billions)"}
    },
    "tooltip": [
      {"field": "year", "type": "ordinal", "title": "Financial Year"},
      {
        "field": "A$ (b)",
        "type": "quantitative",
        "title": "Expenditure (A$ billions)"
      }
    ]
  },
  "config": {}
}